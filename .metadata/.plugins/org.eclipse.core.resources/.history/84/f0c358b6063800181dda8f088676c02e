package EncryptionAlgorithm;

import java.security.NoSuchAlgorithmException;

import javax.crypto.Cipher;
import javax.crypto.KeyGenerator;
import javax.crypto.NoSuchPaddingException;
import javax.crypto.SecretKey;
import javax.crypto.spec.SecretKeySpec;

public class DESede {

	/**
	 * ç”Ÿæˆå¯†é’¥
	 * @throws Exception 
	 */
	public static byte[] initKey() throws Exception{
		//å¯†é’¥ç”Ÿæˆå™?
		KeyGenerator keyGen = KeyGenerator.getInstance("DESede");
		//åˆå§‹åŒ–å¯†é’¥ç”Ÿæˆå™¨
		keyGen.init(168);   //å¯æŒ‡å®šå¯†é’¥é•¿åº¦ä¸º112æˆ?168ï¼Œé»˜è®?168
		//ç”Ÿæˆå¯†é’¥
		SecretKey secretKey = keyGen.generateKey();
		return secretKey.getEncoded();
	}
	
	/**
	 * åŠ å¯†
	 * @throws Exception 
	 */
	public static byte[] encrypt3DES(byte[] data, byte[] key) throws Exception{
		//æ¢å¤å¯†é’¥
		SecretKey secretKey = new SecretKeySpec(key, "DESede");
		//Cipherå®ŒæˆåŠ å¯†
		Cipher cipher = Cipher.getInstance("DESede");
		//cipheråˆå§‹åŒ?
		cipher.init(Cipher.ENCRYPT_MODE, secretKey);
		byte[] encrypt = cipher.doFinal(data);
		
		return encrypt;
	}
	
	/**
	 * è§£å¯†
	 */
	public static byte[] decrypt3DES(byte[] data, byte[] key) throws Exception{
		//æ¢å¤å¯†é’¥
		SecretKey secretKey = new SecretKeySpec(key, "DESede");
		//Cipherå®Œæˆè§£å¯†
		Cipher cipher = Cipher.getInstance("DESede");
		//åˆå§‹åŒ–cipher
		cipher.init(Cipher.DECRYPT_MODE, secretKey);
		byte[] plain = cipher.doFinal(data);
		
		return plain;
	}
}
