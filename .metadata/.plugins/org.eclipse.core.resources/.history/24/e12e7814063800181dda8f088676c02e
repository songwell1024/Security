package encryption;

import java.security.NoSuchAlgorithmException;

import javax.crypto.Cipher;
import javax.crypto.KeyGenerator;
import javax.crypto.NoSuchPaddingException;
import javax.crypto.SecretKey;
import javax.crypto.spec.SecretKeySpec;

/**
 * AESç®—æ³•ç¼–ç¨‹å®ç°
 * @author xzb
 *
 */
public class AESUtil {

	/**
	 * ç”Ÿæˆå¯†é’¥
	 * @throws Exception 
	 */
	public static byte[] initKey() throws Exception{
		//å¯†é’¥ç”Ÿæˆå™?
		KeyGenerator keyGen = KeyGenerator.getInstance("AES");
		//åˆå§‹åŒ–å¯†é’¥ç”Ÿæˆå™¨
		keyGen.init(128);  //é»˜è®¤128ï¼Œè·å¾—æ— æ”¿ç­–æƒé™åå¯ç”?192æˆ?256
		//ç”Ÿæˆå¯†é’¥
		SecretKey secretKey = keyGen.generateKey();
		return secretKey.getEncoded();
	}
	
	/**
	 * åŠ å¯†
	 * @throws Exception 
	 */
	public static byte[] encryptAES(byte[] data, byte[] key) throws Exception{
		//æ¢å¤å¯†é’¥
		SecretKey secretKey = new SecretKeySpec(key, "AES");
		//Cipherå®ŒæˆåŠ å¯†
		Cipher cipher = Cipher.getInstance("AES");
		//æ ¹æ®å¯†é’¥å¯¹cipherè¿›è¡Œåˆå§‹åŒ?
		cipher.init(Cipher.ENCRYPT_MODE, secretKey);
		//åŠ å¯†
		byte[] encrypt = cipher.doFinal(data);
		
		return encrypt;
	}
	/**
	 * è§£å¯†
	 */
	public static byte[] decryptAES(byte[] data, byte[] key) throws Exception{
		//æ¢å¤å¯†é’¥ç”Ÿæˆå™?
		SecretKey secretKey = new SecretKeySpec(key, "AES");
		//Cipherå®Œæˆè§£å¯†
		Cipher cipher = Cipher.getInstance("AES");
		//æ ¹æ®å¯†é’¥å¯¹cipherè¿›è¡Œåˆå§‹åŒ?
		cipher.init(Cipher.DECRYPT_MODE, secretKey);
		byte[] plain = cipher.doFinal(data);
		return plain;
	}
}
